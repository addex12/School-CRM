{
    "name": "survey-system",
    "description": "A survey system for schools and organizations.",
    "type": "project",
    "require": {
        "php": "^8.2",
        "phpmailer/phpmailer": "^6.8",                // For sending emails
        "mpdf/mpdf": "^8.1",                          // For generating PDF reports
        "vlucas/phpdotenv": "^5.5",                   // For environment variable management
        "phpoffice/phpspreadsheet": "^1.28",          // For handling Excel files
        "guzzlehttp/guzzle": "^7.5",                  // For making HTTP requests
        "symfony/var-dumper": "^6.3",                 // For debugging and variable dumping
        "monolog/monolog": "^3.4"                     // For logging
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false
    }
}

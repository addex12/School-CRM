<?php

namespace App\Exceptions;

use Exception;

class CustomException extends Exception
{
    // Custom exception handling can be implemented here
}

class UserNotFoundException extends CustomException
{
    protected $message = 'User not found.';
}

class SurveyNotFoundException extends CustomException
{
    protected $message = 'Survey not found.';
}

class InvalidSurveyResponseException extends CustomException
{
    protected $message = 'Invalid survey response.';
}